FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 2000;      

boundaryField
{
    airinlet
    {
        type            fixedValue;
        value           uniform 300;   
    }

    outlet
    {
        type           inletOutlet;
        inletValue     uniform 300;
        value          uniform 300;
    }

    plate
    {
        type            zeroGradient;   
    }

    jetinlet
    {
        type            fixedValue;
        value           uniform 300;    
    }

    farfield
    {
        type           inletOutlet;
        inletValue     uniform 300;
        value          uniform 300;
    }

    frontAndBackPlanes
    {
        type            empty;
    }
}
