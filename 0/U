FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    airinlet
    {
        type            fixedValue;
        value           uniform (100 0 0);   
    }

    outlet
    {
        type            pressureInletOutletVelocity;
        value           $internalField;
    }

    plate
    {
        type            noSlip;
    }

    jetinlet
    {
        type            fixedValue;
        value           uniform (0 400 0);   
    }

    farfield
    {
        type            pressureInletOutletVelocity;
        value           $internalField;
    }

    frontAndBackPlanes
    {
        type            empty;
    }
}
// ************************************************************************* //

