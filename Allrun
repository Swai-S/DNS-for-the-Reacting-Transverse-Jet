#!/bin/bash
cd "${0%/*}" || exit 1    # Run from this directory

# Source tutorial run functions
. $WM_PROJECT_DIR/bin/tools/RunFunctions

echo "=========================================="
echo "Running supersonic hydrogen combustion case"
echo "=========================================="

# Convert Fluent mesh to OpenFOAM format
echo "Converting Fluent mesh to OpenFOAM format..."
runApplication fluentMeshToFoam 2DJISCFMeshv212file.msh

echo "Checking mesh quality..."
runApplication checkMesh


echo "Running the solver..."
runApplication $(getApplication)

echo "Creating ParaView file..."
touch supersonic-hydrogen.foam

echo "=========================================="
echo "Simulation completed successfully!"
echo "To visualize: paraFoam -builtin"
echo "=========================================="

#------------------------------------------------------------------------------
